{
  "compilerOptions": {
    "strict": true,
    "pretty": true,
    "module": "es6",
    "target": "es2019",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["./src/**/__tests__/*"]
}
